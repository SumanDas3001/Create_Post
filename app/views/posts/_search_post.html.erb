<% unless smart_listing.empty? %>
	<table class="table">
		<thead class="thead-dark">
			<tr>
				<th>title<th>
				<th>Description</th>
				<th>Content</th>
				<th>Author name</th>
				<th>User</th>
				<th>Image</th>
				<th colspan="3"></th>
			</tr>
		</thead>
		<tbody>
			<% smart_listing.collection.each do |object| %>
				<tr>
					<td><%= object.title %></td>
					<td><%= object.description %></td>
					<td><%= raw(object.content) %></td>
					<td><%= object.author_name %></td>
					<td><%= object.user.username %></td>
					<td><%= image_tag object.post_image.url(:thumb)%></td>
					<td><%= link_to 'Show', post_path(object) %></td>
					<td><%= link_to 'Edit', edit_post_path(object) %></td>
					<td><%= link_to 'Destroy', object , method: :delete, data: { confirm: 'Are you sure?' } %></td>
				</tr>
			<% end %>
		</tbody>
	</table>

	<br>
	
<% else %>
	<% puts "----------  error --------- "%>
<% end %>

